{
  "name": "resume",
  "version": "1.0.0",
  "description": "Personal resume",
  "author": "Eugene Cheung",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arkon/resume.git"
  },
  "homepage": "https://github.com/arkon/resume",
  "scripts": {
    "sass": "node-sass --output-style compressed src/scss/styles.scss src/styles.css",
    "sass:watch": "node-sass -w src/scss/styles.scss src/styles.css",
    "build": "npm run sass && inliner -i --skip-absolute-urls src/index.html > index.html"
  },
  "devDependencies": {
    "inliner": "^1.10.2",
    "node-sass": "^4.5.0"
  }
}
